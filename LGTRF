#include<bits/stdc++.h> 
#include<iostream>
using namespace std;
struct Process
{
    int pid; // Process ID
    int bt; // Burst Time
};
// This function is used for sorting all
// processes in increasing order of burst
// time
bool comparison(Process a, Process b)
{
    return (a.bt > b.bt);
}

// Driver code
int main()
{
    Process proc[] = {{1, 13}, {2, 8}, {3, 7}, {4, 50},{5,5},{6,2},{7,4},{8,40},{9,11},{10,20}};
    int n = sizeof proc / sizeof proc[0];
    
    cout <<"Processes       Burst time \n";
    
    // Calculate total waiting time and total turn
    // around time
    for (int i = 0; i < n; i++)
    {
        cout << " " << proc[i].pid << "\t\t\t\t"
        << proc[i].bt <<endl;
    }
    
    // Sorting processes by burst time.
    sort(proc, proc + n, comparison);
    // Display processes along with all details
    
    cout << "Order of billing to students\n";
    for (int i = 0 ; i < n; i++)
        cout << proc[i].pid <<" ";
        cout <<"\n";
    return 0;
}
